apiVersion: v1
kind: Pod
metadata:
  name: maven-web-application
  namespace: prod
  labels:
    app: maven-web-app
    env: prod
spec:
  containers:
  - name: maven-web-container
    image: kkeducationb2/java-webapp:1.1
    ports:
    - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: webservice
  namespace: prod
  labels:
    svcname: webservice
spec:
  type: NodePort
  selector:
    app: maven-web-app 
  ports:
  - port: 80
    targetPort: 8080
