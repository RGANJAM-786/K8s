apiVersion: v1
kind: Pod
metadata:
  name: spring-application
  namespace: dev
  labels:
    app: springapp 
    env: dev
spec:
  containers:
  - name: springcontainer
    image: rganjam/springapp:latest
    ports:
    - containerPort: 8080

---
apiVersion: v1
kind: Service
metadata:
  name: springservice
  namespace: dev
spec:
  type: NodePort
  selector:
    app: springapp
  ports:
  - port: 80
    targetPort: 8080
    
