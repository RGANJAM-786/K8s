apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: web-replicaset
  namespace: db
spec:
  replicas: 2
  selector:
    matchLabels:
     app: mavenwebapp
  template:
    metadata:
      name: mavenwebapppod
      labels:
        app: mavenwebapp
    spec:
      containers:
      - name: mavenwebcontainer
        image: ganjam/springapp:latest
        ports:
        - containerPort: 8080
---
apiVersion: v1 
kind: Service
metadata:
  name: mavenservice
  namespace: db
spec:
  type: NodePort
  selector:
   app: mavenwebapp
  ports:
  - port: 80
    targetPort: 8080
